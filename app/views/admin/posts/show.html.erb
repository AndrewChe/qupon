<div class="well well-small">
    <div class="span11">
        <p><%= @post.title %></p>
    </div>
</div>
<div class="span10">
    <p id="post_body"><%= raw(@markdown.render(@post.body)) %></p>
</div>
<div class="span12">
    <p>
        <%= render :partial => "posts/author_help", locals: { post: @post } %>
        <%= render "posts/tags", tags: @post.tag_list, admin: true %>
    </p>

    <div class="well well-small">
        Admin tools:
        <div class="btn-toolbar">
            <%= link_to 'Edit', { action: "edit", id: @post.id }, controller: :admin_posts, class: "btn btn-warning btn-mini" %>
            <%= link_to("Delete", [:admin, @post], method: :delete, class: "btn btn-danger btn-mini", data: { confirm: 'Are you sure?' }) %>
        </div>
    </div>
</div>


    <div class="span11">
        Comments:
        <% @comments.each do |comment| %>
            <div class="well well-small">
                <%= render "comments/comment_partial", comment: comment, admin: true %>
            </div>
    <% end %>
    <%= will_paginate @comments %>

</div>
