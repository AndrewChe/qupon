<div class="qap_form">

  <%= form_for @post do |f| %>
      <% if @post.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@post.errors.count, "error") %>
              prohibited this post from being saved:</h2>
            <ul>
              <% @post.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <fieldset>
        <legend>Create Post</legend>

        <%= f.text_field :post_type, hidden: true, value: "post"  %>

        <div>
          <%= f.label :title %>:
          <%= f.text_field :title, size: 40 %>
        </div>

        <div>
          <%= f.label :body %>:
          <%= f.text_area :body, size: 2000 %>
        </div>

        <div>
          <%= f.submit %>
        </div>

      </fieldset>
  <% end %>

</div>