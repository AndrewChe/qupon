<div class="entry">
  <p><%= @post.title %></p>
  <p id = "post_body"><%= raw(@markdown.render(@post.body)) %></p>
  <p><%= render :partial => "posts/author_help", locals: { post: @post } %></p>
  <%= link_to 'Edit post', {action: "edit", id: @post.id}, controller: :posts if current_user == @post.user %>
  <%= button_to("Delete post", {action: "destroy", id: @post.id}, method: :delete, data: { confirm: 'Are you sure?' }) if current_user == @post.user %>
  Comments:
  <% @post.posts.each do |comment| %>
      <p id = "post_body"><%= raw(@markdown.render(comment.body)) %></p>
      <p><%= render :partial => "posts/author_help", locals: { post: comment } %></p>
      <% if current_user == comment.user %>
        <%= link_to 'Edit post', {action: "edit", id: comment.id}, controller: :posts  %>
        <%= button_to("Delete post", {action: "destroy", id: comment.id}, method: :delete, data: { confirm: 'Are you sure?' }) %>
      <% end %>
      <p>---------------------</p>
  <% end %>
  <%= render 'posts/comment_form' %>
</div>
